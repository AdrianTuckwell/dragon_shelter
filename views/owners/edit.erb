<a>Edit Owner:</a>
<a href="/owners">Return</a><br>
<div class="clearfix float-my-children">
  <img src="/images/<%=@owner.name%>.png" alt="Cover" height="500" width="300">

  <form action="/owners/<%= @owner.id %>" method="post">
    <a>
      <label for="name">Name :</label>
      <input type="text" name="name" value="<%= @owner.name %>"> 
      <br>
      <label for="address">Address :</label>
      <input type="text" name="address" value="<%= @owner.address %>">
      <br>
      <input type="hidden" name="_method" value="put">  
      <!-- this is to recognise the put request - _method  -->
      <input type='submit' value="Update">
    </a>
  </form>
</div>
