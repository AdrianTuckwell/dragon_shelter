<form action="/adoptions" method="post">

  <!-- Dragon select list -->
  <label for="dragon_id">Dragon:</label>
  <select name="dragon_id" id="dragon_id">
    <% @dragons.each do |dragon| %>
      <option value="<%= dragon.id %>"><%= dragon.name %></option>
    <% end %>
  </select>
  <br>  
  <br>  

  <!-- Owners select list -->
  <label for="owner_id">Owner:</label>
  <select name="owner_id" id="owner_id">
    <% @owners.each do |owner| %>
      <option value="<%= owner.id %>"><%= owner.name %></option>
    <% end %>
  </select>
  <br>
  <br>
  <input type="submit" value="Adopt dragon"></input>
</form>