      </div>
    </div>  
  </div>
</div>
<!-- GRID - END-================================================ -->


<div class="grid-row grid-row-md">
  <div class="cell">
    <div class="navigation">
      <a href="/">Home</a>
    </div>
  </div>
  <div class="cell">
    <div class="navigation">
      <a href="/dragons">Dragons</a>
    </div>
  </div>
  <div class="cell">
    <div class="navigation">
      <a href="/owners">Owners</a>
    </div>
  </div>
  <div class="cell">
    <div class="navigation">
      <a href="/adoptions">Adoptions</a>
    </div>
  </div>
</div>

<!-- DATE SCRIPT======================================================================== -->
<script>
  var dt = new Date();
  document.getElementById("datetime").innerHTML = ( (("0"+dt.getDate()).slice(-2)) +"/"+ ("0"+(dt.getMonth()+1)).slice(-2)) +"/"+ (dt.getFullYear());
</script>
<!-- DATE SCRIPT END==================================================================== -->




<main>
  <%= yield %>
</main>
<a><footer>Dragon Shelter &copy 2016</footer></a>
</body>
</html>


